<!doctype html>
<html lang="es">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User</title>
    <link rel="stylesheet" href="resources/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

    <!-- iconos-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  </head>

  <body class="container">
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><i class="bi bi-incognito"></i>INVENTARIO</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/"><i class="bi bi-house-door-fill"></i> INICIO</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/user/index"><i class="bi bi-people"></i> USUARIO</a>
            </li>    
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/producto/index"><i class="bi bi-bag-fill"></i> PRODUCTO</a>
            </li>  
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/proveedor/index"><i class="bi bi-p-circle-fill"></i> PROVEEDOR</a>
            </li>  
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/marca/index"><i class="bi bi-tags-fill"></i> MARCA</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/inventario/index"><i class="bi bi-house-door-fill"></i> INVENTARIO</a>
            </li>              
          </ul>
          <form class="d-flex" role="search">
              <span class="input-group-text" id="addon-wrapping"> 
                  <i class="bi bi-person-circle"></i>
              </span>
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-light" type="submit"><i class="bi bi-search"></i></button>
          </form>
        </div>
      </div>
    </nav>

      <br class="container-fluid">
        <div class="input-group mb-3">
        <a href="/user/create" class="btn btn-outline-primary"><i class="bi bi-plus-circle-fill"></i> Nuevo</a>
        <p style="margin-left: 20px;">Mostrar <input type="number"> registros</p>
        <a href="https://www.youtube.com/watch?v=jynuHnIziuw">link</a>
        </div>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr class="bg-primary text-white">
                <th scope="col">ID</th>
                <th scope="col">USUARIO</th>
                <th scope="col">NOMBRE COMPLETO</th>
                <th scope="col">ROL</th>
                <th scope="col">EDITAR</th>
              </tr>
            </thead>
            <tbody>
              <% results.forEach((users)=> { %>           
                <tr>
                  <td> <%= users.id %> </td>
                  <td> <%= users.user %> </td>
                  <td> <%= users.name %> </td>
                  <td> <%= users.rol %> </td>
                  <td>
                    <a href="/user/edit/<%= users.id %>" class="btn btn-outline-info"><i class="bi bi-pencil-square"></i></a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
            <tfoot>
              <caption>Total de Usuarios: </caption>
            </tfoot>
          </table>
        </div> <!-- fin del contenedor de la tabla responsive -->
      </br>

     
  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
  </body>
</html>