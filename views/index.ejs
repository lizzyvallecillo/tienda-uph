<body class="container"> 
      
      <!-- 
    <% if (login) { %>
        <h1> el usuario es: <strong> <%= name %></strong></h1>
        <a href="login" class="a-logout"> Cerrar sesión</a>
        <%} else { %>
            <h1><strong> <%= name %></strong></h1>
            <a href="login" class="a-login">Ir a Login</a>
            <% } %>
            -->




  <div class="container-fluid mt-4" >
    <div class="card border-secondary inv-form">
      <div class="card-header" style="background: #769FCD;"><h1>INVENTARIO AREA DE SISTEMAS</h1></div>

      <div class="card-body cont">        
        <form action="/index" method="POST">                        
                            
          <div class="flex-container">
            <div class="card-inventario">
              <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">ORDEN DE PEDIDO : </span>
                <input type="text" class="form-control" id="orden" name="orden" aria-describedby="addon-wrapping">
              </div>   
              <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">ESTADO : </span>
                  <select class="form-select" id="estado" name="estado">
                    <option disabled="true" selected>Seleccionar...</option>
                    <option value="Entrada">Entrada</option>
                    <option value="Salida">Salida</option>
                  </select>
              </div>
              <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">CANTIDAD : </span>
                <input type="number" class="form-control"  id="cantidad" name="cantidad" value="1" aria-describedby="addon-wrapping">
              </div>
              <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">FECHA : </span>
                <input type="datetime-local" class="form-control" id="fecha" name="fecha" value="datetime-local"> 
              </div>
              <div class="mb-3">
                <label for="descripcion" class="form-label">DESCRIPCION</label>
                <textarea class="form-control"  id="descripcion" name="descripcion" aria-label="With textarea"></textarea>                          
              </div>
            </div>

            <div class="card-producto">
              <div class="card-header" style="text-align: center;">
                <label for="id_producto" class="form-label"> <strong>PRODUCTO</strong> </label>
              </div>                              
              <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">ID: </span>
                <input type="text" class="form-control" id="id_producto" name="id_producto" aria-label="Username" 
                                        aria-describedby="addon-wrapping">
                <button type="button" class="btn btn-primary">
                  <a href="/producto/index"><i class="bi bi-eye-fill" style="color: #fff;"></i></a>
                </button>
              </div>
                                     
              <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">CODIGO: </span>
                <input type="text" class="form-control" aria-label="Username" aria-describedby="addon-wrapping">
              </div>  
              <div class="input-group flex-nowrap">
                <span class="input-group-text" id="addon-wrapping">NOMBRE: </span>
                <input type="text" class="form-control" aria-label="Username" aria-describedby="addon-wrapping">
              </div>
            </div>
          </div> 
            <div class="card-footer" style="text-align: center;">
              <input type="text" class="form-control" id="usuario" name="usuario" tabindex="1" hidden>  
              <input type="submit" class="btn-guardar" value="Guardar">                         
            </div>
        </form>
      </div>
                   <!-- Button trigger modal -->


        <!-- Modal -->
        


